<%= layout("/layout/boilerplate") %>

    <body>
        <h2 style="text-align: center;">Create new Route </h2>
        <div class="row">
            <div class="col-8 offset-2">
                <form method="post" action="/listings" novalidate class="needs-validation"
                    enctype="multipart/form-data">
                    <div>
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" placeholder="Enter title" class="form-control" required>
                        <div class="valid-feedback">Title looks good!</div>
                    </div>

                    <br>

                    <div>
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" class="form-control" id="" cols="30" rows="10"
                            required></textarea>
                        <div class="invalid-feedback">Please write sort discription</div>
                    </div>

                    <br>

                    <div>
                        <label for="image" class="form-label">Upload Listing Image</label>
                        <input name="listing[image]" class="form-control" type="file" required>
                    </div>
                    <br>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="listing[price]" placeholder="1200" class="form-control" required>
                            <div class="invalid-feedback">Price should be valid</div>
                        </div>

                        <br>

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input name="listing[country]" placeholder="India" class="form-control" type="text"
                                required>
                            <div class="invalid-feedback">Country name should be valid</div>
                        </div>
                    </div>

                    <br>

                    <div>
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" placeholder="Jaipur,Rajisthan" class="form-control" type="text"
                            required>
                        <div class="invalid-feedback">Location name should be valid</div>
                    </div>
                    <br>
                    <div>
                        <label for="category" class="form-label">Choose a Category</label>
                        
                        
                        
                        <select id="category" name="listing[category]">
                            <option value="Mountain">Mountain</option>
                            <option value="Rooms">Rooms</option>
                            <option value="Camping">Camping</option>
                            <option value="Doms">Doms</option>
                            <option value="Boats">Boats</option>
                            <option value="Farms">Farms</option>
                            <option value="Snow">Snow</option>
                            <option value="Castles">Castles</option>
                            <option value="Pools">Pools</option>
                        </select>

                        <div class="invalid-feedback">Please enter you category</div>
                    </div>
                    <br>
                    <button class="btn btn-dark add-btn">submit</button>
                </form>
            </div>
        </div>
    </body>